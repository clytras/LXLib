{
  "name": "@lytrax/lxlib",
  "author": "Christos Lytras",
  "version": "0.0.7",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/lxlib.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --entry src/index.ts --entry src/utils/index.ts",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release",
    "postinstall": "patch-package",
    "--preversion": "yarn lint && yarn test",
    "--postversion": "cross-var publish:git && yarn publish:npm && echo \"Successfully released version $npm_package_version!\"",
    "--publish:git": "cross-var git add . && git commit -m \"chore(publish): version v$npm_package_version\" && git push --follow-tags && git push",
    "--publish:npm": "cross-var cross-env npm_config_registry=https://registry.npmjs.org/ npm publish --access=public --tag $npm_package_version",
    "deploy": "np"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".babelrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/lxlib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/lxlib.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/jest": "^26.0.20",
    "@types/validator": "^13.1.3",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4",
    "patch-package": "6.2.2",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.3",
    "size-limit": "^4.9.1",
    "tsdx": "0.14.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "validator": "^13.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clytras/LXLib.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
